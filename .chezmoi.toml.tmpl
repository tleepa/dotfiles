{{ $gitEmail := promptString "git email" -}}
{{ $gitUser := promptString "git user" -}}
{{ $keepassXcDbPath := promptString "path to KeePassXC database" -}}
{{ $keepassXcKeyFilePath := promptString "path to KeePassXC key file" -}}
[diff]
    pager = "delta"

{{ if $keepassXcDbPath -}}
[keepassxc]
    database = {{ $keepassXcDbPath | quote }}
{{- end }}
{{- if $keepassXcKeyFilePath }}
    args = ["-k", {{ $keepassXcKeyFilePath | quote }}]
{{- end }}
{{ if or $gitEmail $gitUser }}
[data.git]
{{-  if $gitUser }}
{{-   end }}
    user = {{ $gitUser | quote }}
{{-   if $gitEmail }}
    email = {{ $gitEmail | quote }}
{{-   end -}}
{{- end -}}
